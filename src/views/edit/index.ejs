<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/stylesheets/profile.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/css/bootstrap.min.css">
    <title>Document</title>
</head>
<body>
    <%const value =  post[0].dataValues %>
    <div id="main">
        <div id="create">
            <form action="/api/v1/post/editPost/<%=value.id %>" enctype="multipart/form-data" method="post">
                <input type="text" id="title" name="title" placeholder="Whats Happening ?" value="<%=value.title %>" >
                <div id="content">
                    <div id="c_left">
                        <div id="image">
                            <img src="/images/<%=value.image_url %>" alt="Click to add image">
                            <input type="file" name="image" id="image_file">
                        </div>
                    </div>
                    <div id="c_right">
                        <select id="selectValue" name="show">
                            <option value="true" selected>Everyone can view & reply</option>
                            <option value="false">Only me</option>
                        </select>
                        <input  type="submit" id="btn_share" value="Edit Now">
                    </div>
                </div>
            </form>
        </div>
    </div> 
    
    <script>

        document.querySelector('#image').addEventListener('click', () => {
            document.querySelector('#image_file').click()
        })


    </script>
</body>
</html>